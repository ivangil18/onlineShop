<body>
<%- include('../includes/navigation.ejs')%>

    <main>
        <% if (orders.length <= 0) {%>
        <h1>No Orders yet!</h1>
        <% } else { %>
        <ul>
            <% orders.forEach( order => {%>
                <li>
                    <h4> Order #: <%= order._id %> - <a href="/invoice/<%= order._id%>">Invoice</a></h4>
                    <ul>
                        <% order.products.forEach(item => {%>
                    <li><h2><%= item.product.title%> (<%= item.quantity%>)</h2></li>  
                    <hr>      
                          
                        <%})%>
                    </ul>
                </li>
                <%})%>
        </ul>
        <hr>
        <%  } %>
    </main>
<%- include('../includes/end.ejs')%>
