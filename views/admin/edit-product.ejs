  <body>
  <%- include('../includes/navigation.ejs') %>

    <main>
      <form action="/admin/<% if(editMode) {%>edit-product/<%= product.id%><%}else{%>add-product<%}%>" method="POST" class="product-form">
        <div class="form-control">
          <label for="title">Product:</label>
          <input type="text" name="title" id="title" value="<% if(editMode) {%><%= product.title%> <%}%>" />
        </div>
        <div class="form-control">
          <label for="imageURL">Image URL:</label>
          <input type="text" name="imageURL" id="imageURL" value="<% if(editMode) {%><%= product.imageURL%> <%}%>" />
        </div>
        <div class="form-control">
          <label for="price">Price:</label>
          <input type="text" name="price" id="price" value="<% if(editMode) {%><%= product.price%> <%}%>" />
        </div>
        <div class="form-control">
          <label for="description">Product:</label>
          <textarea name="description" id="description" rows="5"><% if(editMode) { %><%= product.description%><%}%></textarea>
        </div>
        <button class="btn" type="submit"><%if (editMode) { %>Update Product<%}else{%>Add Product<%}%></button>
        </form>
    </main>
 <%- include('../includes/end.ejs') %>
 
